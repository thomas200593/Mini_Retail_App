<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mini_Retail_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Themes.App.Starting -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_48x48</item>
        <item name="postSplashScreenTheme">@style/Theme.Mini_Retail_App</item>
    </style>
    <!-- /Themes.App.Starting -->
</resources>